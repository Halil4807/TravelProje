@using TravelProje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yorum Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Yorum ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td width="7%">@item.ID</td>
            <td width="8%">@item.KullaniciAdi</td>
            <td width="15%">@item.Mail</td>
            <td width="50%">@item.Yorum</td>
            <td width="10%"><a href="/Yorumlar/YorumSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td width="10%"><a href="/Admin/YorumGetir/@item.ID" class="btn btn-primary">Güncelle</a></td>
            <td width="10%"><a href="#" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>